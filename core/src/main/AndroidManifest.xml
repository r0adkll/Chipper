<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.r0adkll.chipper.core">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>

    <application>

        <!-- The intent service used to download chiptunes for offline use -->
        <service android:name=".data.OfflineIntentService" />

        <!-- This is the Account/Authenticator stub definition for the sync adapter -->
        <service android:name=".data.sync.AuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>
            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <service android:name=".data.sync.SyncService"
            android:exported="true"
            android:process=":sync">

            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />

        </service>

        <!-- Stub Content Provider -->
        <provider
            android:authorities="com.r0adkll.chipper.provider"
            android:name="com.r0adkll.chipper.core.data.sync.StubProvider"
            android:exported="false"
            android:syncable="true" />

    </application>



</manifest>
