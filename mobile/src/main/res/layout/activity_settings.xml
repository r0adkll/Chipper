<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/setting_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/half_padding"
        >

        <TextView
            android:id="@+id/setting_general"
            android:layout_width="match_parent"
            android:layout_height="48dp"

            android:paddingLeft="@dimen/keyline_2"
            android:text="General settings"
            android:textSize="16sp"
            android:textColor="@color/black85"
            android:gravity="start|center_vertical"
            android:background="?attr/selectableItemBackground"
            />

        <TextView
            android:id="@+id/setting_account"
            android:layout_width="match_parent"
            android:layout_height="48dp"

            android:paddingLeft="@dimen/keyline_2"
            tools:text="veedubusc@gmail.com"
            android:textSize="16sp"
            android:textColor="@color/black85"
            android:gravity="start|center_vertical"
            android:background="?attr/selectableItemBackground"
            />

        <TextView
            android:id="@+id/setting_downloading"
            android:layout_width="match_parent"
            android:layout_height="48dp"

            android:paddingLeft="@dimen/keyline_2"
            android:text="Downloading"
            android:textSize="16sp"
            android:textColor="@color/black85"
            android:gravity="start|center_vertical"
            android:background="?attr/selectableItemBackground"
            />

        <TextView
            android:id="@+id/setting_about"
            android:layout_width="match_parent"
            android:layout_height="48dp"

            android:paddingLeft="@dimen/keyline_2"
            android:text="About"
            android:textSize="16sp"
            android:textColor="@color/black85"
            android:gravity="start|center_vertical"
            android:background="?attr/selectableItemBackground"
            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</RelativeLayout>